{
    "name": "Vaadin Docs Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "TZ": "${localEnv:TZ:Europe/Helsinki}"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "chrischinchilla.vale-vscode",
                "asciidoctor.asciidoctor-vscode",
                "anthropic.claude-code"
            ],
            "settings": {
                "vale.enableSpellcheck": true,
                "vale.valeCLI.syncOnStartup": true
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        },
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21",
            "jdkDistro": "tem",
            "installMaven": "true"
        },
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "remoteUser": "vscode",
    "mounts": [
        "source=claude-code-config-${devcontainerId},target=/home/vscode/.claude,type=volume",
        "source=m2-${devcontainerId},target=/home/vscode/.m2,type=volume",
        "source=bashhistory-${devcontainerId},target=/commandhistory,type=volume"
    ],
    "containerEnv": {
        "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/workspace"
}